<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:orientation="horizontal" android:background="@drawable/bg_strip"
	android:layout_marginTop="10dip" android:layout_marginBottom="10dip"
    android:layout_height="wrap_content" >
	
    <TableLayout android:id="@+id/table" android:stretchColumns="2" 
	    android:layout_gravity="center_vertical" android:background="@drawable/bg_strip"
		android:layout_width="fill_parent" android:layout_height="wrap_content" >
		
	    <TableRow android:id="@+id/nameRow" 
	        android:layout_width="0dip" android:weightSum="10"
			android:layout_height="wrap_content" android:background="@drawable/bg_strip">
	
    		<LinearLayout 
				android:orientation="vertical" android:layout_weight="5.4"
				android:layout_gravity="center_vertical" android:layout_marginLeft="10dip"
				android:layout_width="0dip" android:layout_height="wrap_content">
	
				<TextView android:layout_width="wrap_content"
					style="@style/fieldText"
					android:focusable="false" android:focusableInTouchMode="false"
					android:layout_gravity="center_vertical" android:layout_height="wrap_content"
					android:ellipsize="end" android:singleLine="true" android:id="@+id/lisnName" />
		
				<TextView android:layout_width="wrap_content"
					style="@style/fieldTextSmall" android:focusable="false" android:focusableInTouchMode="false"
					android:layout_gravity="center_vertical" android:layout_height="wrap_content"
					android:ellipsize="end" android:singleLine="true" android:id="@+id/lisnDescription" />
	
			</LinearLayout>
	
			<LinearLayout 
				android:orientation="horizontal" android:layout_weight="3"
				android:layout_gravity="center_vertical|center_horizontal"
				android:layout_width="0dip" android:layout_height="wrap_content">  
			
	    		<RelativeLayout android:id="@+id/my_ph2"    
					
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:layout_marginRight="10dip"
					android:layout_marginTop="5dip"
					android:layout_marginBottom="5dip" >
	    
					<ImageView android:id="@+id/messageImage" android:layout_width="wrap_content"
		    			android:layout_height="wrap_content" android:background="@drawable/ic_message_bubble" />
		
					<TextView  
    					android:id="@+id/messageCount"
    					android:layout_width="wrap_content" 
    					android:layout_height="wrap_content" 
    					android:layout_alignTop="@+id/messageImage"
    					android:layout_alignRight="@+id/messageImage"
    					android:background="@drawable/ic_notification_icon_gray"
    					android:gravity="center"
    					android:textSize="8dp"
    	    			android:textColor="#ffffff" />
		
				</RelativeLayout>
			
	   			<RelativeLayout android:id="@+id/my_ph1"    
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:layout_marginRight="10dip"
					android:layout_marginTop="5dip"
					android:layout_marginBottom="5dip" >
	    
					<ImageView android:id="@+id/lisnerImage" android:layout_width="wrap_content"
		    			android:layout_height="wrap_content" android:background="@drawable/ic_lisners" />
		
					<TextView  
    					android:id="@+id/lisnerCount"
    					android:layout_width="wrap_content" 
    					android:layout_height="wrap_content" 
    					android:layout_alignTop="@+id/lisnerImage"
    					android:layout_alignRight="@+id/lisnerImage"
    					android:background="@drawable/ic_notification_icon_gray"
    					android:gravity="center"
    					android:textSize="8dp"
    	    			android:textColor="#ffffff" />
		
				</RelativeLayout>
			</LinearLayout>
	
			<ImageButton android:layout_width="0dip" style="@style/lisnButtonText"
	    		android:layout_weight="1.6" android:layout_marginTop="1dip"
				android:layout_marginBottom="1dip" android:layout_marginRight="1dip"
				android:focusable="false" android:focusableInTouchMode="false"
				android:layout_gravity="center_vertical|center_horizontal"
				android:layout_height="wrap_content" android:id="@+id/lisnButton" />
		
		</TableRow>
	</TableLayout>
</LinearLayout>