<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:gravity="left">

    <ImageView
        android:id="@+id/notificationsImageAccepted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="0dip"
        android:layout_marginTop="5dip"
        android:src="@drawable/ic_place_holder" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_marginTop="0dip">

            <TextView
                android:id="@+id/notificationsNameAccepted"
                style="@style/messageContentTextBlue"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginRight="5dip"
                android:layout_weight="9"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <ImageView
                android:id="@+id/connectedImageAccepted"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:src="@drawable/ic_is_friend" />
        </LinearLayout>

        <TextView
            android:id="@+id/statusText"
            style="@style/messageDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="left"
            android:text="Accepted"
            android:layout_marginLeft="0dip"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>