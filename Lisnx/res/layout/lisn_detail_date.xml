<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent" 
	android:gravity="center_horizontal|center_vertical"
	android:layout_height="wrap_content" android:background="@drawable/bg_strip" >
		
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="wrap_content" 
		android:layout_height="wrap_content" android:gravity="left|center_vertical"
		android:layout_marginLeft="5dip">
	
		<ImageView 
			android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
			android:layout_height="wrap_content" android:id="@+id/start" 
			android:background="@drawable/ic_date_start" android:layout_width="wrap_content"/>
		
		<TextView 
			android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
			android:layout_marginLeft="5dip" android:layout_height="wrap_content"
			style="@style/lisnDetailDates"
			android:id="@+id/one" android:layout_width="wrap_content"/>
	</LinearLayout>
		
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent" 
		android:layout_height="wrap_content" android:gravity="right|center_vertical"
		android:layout_marginRight="5dip">
	
		<ImageView 
			android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
			android:layout_height="wrap_content" android:id="@+id/end" 
			android:background="@drawable/ic_date_end" android:layout_width="wrap_content"/>
	
		<TextView 
			android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
			android:layout_marginLeft="5dip" android:layout_height="wrap_content"
			style="@style/lisnDetailDates"
			android:id="@+id/two" android:layout_width="wrap_content"/>
	</LinearLayout>
</LinearLayout>
