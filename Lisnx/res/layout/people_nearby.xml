<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:androidsam="http://schemas.android.com/apk/res/com.jameselsey"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	style="@style/background" android:orientation="vertical">

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/PNLL1" 
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:orientation="vertical">

			<include android:id="@+id/main_header" android:layout_width="fill_parent"
				android:layout_height="wrap_content" layout="@layout/back_header" />
		
			<!-- <include android:id="@+id/image_name_strip"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				layout="@layout/image_name_holder" android:layout_marginTop="5dip"/>
			 -->
			<include android:id="@+id/list_intro_strip"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginLeft="3dip" android:layout_marginRight="3dip"
				layout="@layout/list_introduction_holder" android:layout_marginTop="3dip"/>
			
			<TextView  
				    		android:id="@+id/noPeopleNearbyBox"
				    		android:layout_width="fill_parent" 
				    		android:layout_height="wrap_content"
				    		android:background="@drawable/bg_strip"
				    		android:gravity="center"
				    		android:visibility="gone"
				    		style="@style/fieldText"
				    		android:text="@string/noPeopleNearbyText"
				    		android:layout_marginLeft="3dip"
				    		android:layout_marginRight="3dip"
				    		android:layout_marginTop="1dip"
				    		android:paddingTop="10dip"
				    		android:paddingBottom="10dip"/>
			
			<ListView
			    android:layout_marginTop="0dip"  
		    	android:layout_width="fill_parent" 
		    	android:layout_height="fill_parent"
		    	android:divider="@color/listDivider"
				android:dividerHeight="1dp"
				android:footerDividersEnabled="false"
				android:headerDividersEnabled="true"
		    	style="@style/listBackground" 
		    	android:cacheColorHint="#00000000"
		    	android:id="@+id/list"/>
			
		</LinearLayout>
</RelativeLayout>
			