<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:weightSum="10" android:background="@drawable/bg_strip"
	android:layout_width="fill_parent" android:layout_height="wrap_content">
	<!-- android:weightSum="10" -->
	
	<ImageView android:id="@+id/lisnerImage" 
		android:layout_gravity="center_vertical|left"
		android:layout_height="wrap_content" android:layout_marginLeft="10dip"
		android:layout_marginTop="5dip" android:layout_marginBottom="5dip"
		android:layout_width="wrap_content" android:background="@drawable/bg_image_border"
		android:src="@drawable/ic_place_holder" />
	<!-- android:layout_weight="2" -->
	
	<TableLayout android:id="@+id/table" android:stretchColumns="1" 
	    android:layout_gravity="center_vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content" >
		
	    <TableRow android:id="@+id/nameRow" android:layout_width="0dip" android:weightSum="10"
			android:layout_height="wrap_content" >
	
	<TextView android:layout_width="0dip" style="@style/lisnText"
		android:layout_gravity="center_vertical|center_horizontal"
	    android:layout_marginLeft="15dip" android:layout_weight="9"
		android:layout_height="wrap_content" android:id="@+id/lisnersName" />
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_gravity="center_horizontal|center" android:layout_marginRight="10dip"
		android:orientation="horizontal" android:layout_weight="1"
		android:layout_marginLeft="10dip"
		android:layout_width="0dip" android:layout_height="wrap_content">
	
	<ImageView android:id="@+id/isFriendImage"
		android:layout_gravity="center_vertical|center_horizontal"
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content" 
		android:src="@drawable/ic_is_friend" android:visibility="gone" />
	
	<ImageView android:id="@+id/isNotFriendImage"
		android:layout_gravity="center_vertical|center_horizontal"
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content" 
		android:src="@drawable/ic_not_connected" android:visibility="gone" />
	
	</LinearLayout>
	
	</TableRow>
	</TableLayout>

</LinearLayout>
