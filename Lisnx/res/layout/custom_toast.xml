<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_toast_layout" 
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:layout_gravity="center_horizontal|center_vertical">
    
    <TextView android:id="@+id/toastText" 
        android:layout_width="fill_parent" android:background="@drawable/bg_strip"
        android:layout_height="fill_parent" android:textSize="18dip"
        android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
        android:textColor="#3b64a8" android:gravity="center_horizontal|center_vertical"
        android:paddingTop="15dp" android:paddingBottom="15dp"
        android:paddingRight="5dp" android:paddingLeft="5dp"/>	
</LinearLayout>