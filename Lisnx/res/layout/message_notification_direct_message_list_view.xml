<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
		    android:id="@+id/senderImage"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentTop="true"
		    android:layout_alignParentLeft="true"
		    android:layout_marginLeft="0sp" 
		    android:background="@drawable/bg_image_border"
		    android:src="@drawable/ic_place_holder" />
		
		<TextView
		    android:id="@+id/senderName"
		    style="@style/messageContentTextBlue"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:layout_marginBottom="0dp" 
		    android:layout_marginLeft="10dp" 
		    android:layout_alignParentTop="true"  
        	android:layout_toRightOf="@+id/senderImage"/>
		
		<TextView
		    android:id="@+id/txtPrivateMessage"
		    style="@style/messageDateText"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:layout_below="@+id/senderName"
		    android:layout_toRightOf="@+id/senderImage"
		    android:layout_toLeftOf="@+id/newMessageCount" />
		
		<TextView
		        android:id="@+id/txtDate"
		        style="@style/messageDateText"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:maxLines="1" 
		        android:layout_alignParentTop="true"
		        android:layout_alignParentRight= "true"/>
		
		<TextView  
    		android:id="@+id/newMessageCount" 
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content"
    		android:background="@drawable/ic_notification_icon_blue"
    		android:gravity="center"
    		android:textSize="9sp" 
    	    android:textColor="#ffffff"
    	    android:layout_alignParentRight="true"
    	    android:layout_below="@+id/txtDate"/>

		
	
</RelativeLayout>