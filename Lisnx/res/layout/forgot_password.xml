<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/aboutus" style="@style/background"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical">

	<include android:id="@+id/back_header" android:layout_width="fill_parent"
		android:layout_height="wrap_content" layout="@layout/register_header" />

	<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/scrollLoginXml" android:scrollbarSize="3dip"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:fillViewport="true" android:fadingEdge="none" > 

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical" android:layout_width="fill_parent"
			android:layout_height="wrap_content" >
			
		    <TextView android:id="@+id/enterEmailText" 
			  	android:layout_gravity="center_horizontal" android:layout_marginTop="50dip"
			  	android:layout_marginLeft="15dip" android:layout_marginRight="15dip"
			  	android:layout_width="wrap_content" android:layout_height="wrap_content" 
			  	android:text="@string/enterYourEmailText" style="@style/fieldText" />
		    
		    <EditText
		      android:id="@+id/emailTemporaryField" android:inputType="textEmailAddress"
		      android:layout_gravity="center_horizontal" android:layout_marginRight="15dip"
		      android:layout_height="wrap_content" android:layout_width="fill_parent"
		      android:layout_marginLeft="15dip" android:layout_marginTop="20dip"
		      android:hint="@string/enterIdHere" android:textColorHint="#939393">		
			</EditText>	
			
		    <ImageButton
	 			android:id="@+id/submitEmailButton"
     			android:layout_height="wrap_content" android:layout_width="wrap_content"
     			android:layout_gravity="right" android:layout_marginRight="15dip"
     			android:background="@drawable/ic_submit" />
			
		</LinearLayout>
	</ScrollView>
</LinearLayout>