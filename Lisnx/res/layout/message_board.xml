<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical"
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent"
	    style="@style/background">
		 
		  <ListView  
		    android:layout_width="fill_parent" 
		    android:layout_height="0dp"
		    android:layout_weight="1"
		    android:divider="@color/listDivider"
			android:dividerHeight="0dp"
			android:footerDividersEnabled="false"
		    style="@style/listBackground" 
		    android:id="@+id/messageBoardList"
    		android:layout_marginRight="3dip"
    		android:cacheColorHint="#00000000"
		    android:layout_marginLeft="3dip" />
	
		  
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_gravity="center_horizontal|center" android:weightSum="10"
			android:orientation="horizontal" android:gravity="center_horizontal|center_vertical"
			android:layout_width="fill_parent" android:layout_height="wrap_content">

			<EditText android:id="@+id/messageField"
				android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:layout_weight="9.3" android:layout_gravity="center_horizontal|center_vertical"
				android:layout_marginRight="5dip" android:layout_marginLeft="10dip"
				android:maxLines="2" android:minLines="1">
			</EditText>
			
			<ImageView android:id="@+id/postMessageButton"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:layout_weight="0.7" android:layout_gravity="center_horizontal|center_vertical"
				android:background="@drawable/ic_send" android:layout_marginRight="10dip" />

		</LinearLayout>
</LinearLayout>