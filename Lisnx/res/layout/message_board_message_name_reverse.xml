<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:gravity="right"
	android:paddingTop="5dip" android:paddingBottom="5dip"
	android:layout_width="wrap_content" android:layout_height="wrap_content">
	
    <ImageView android:id="@+id/lisnerImage1"
		android:layout_gravity="right" android:visibility="invisible"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:background="@drawable/bg_image_border"
		android:src="@drawable/ic_off" />
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_weight="1"
		android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:background="@drawable/bubble_right" android:layout_gravity="center_vertical|center_horizontal"
		android:gravity="right" >
		
		<TextView android:layout_width="wrap_content" style="@style/messageDateText"
		    android:maxLines="1"
		    android:layout_height="wrap_content" android:id="@+id/txtDate" android:gravity="right" />
		
		<TextView android:layout_width="wrap_content" style="@style/messageContentTextBlack"
		    android:layout_height="wrap_content" android:id="@+id/messageName" android:gravity="right" />
	</LinearLayout>
	
	<ImageView android:id="@+id/lisnerImage"
		android:layout_gravity="right"
		android:layout_height="wrap_content" android:layout_marginRight="5dip"
		android:layout_width="wrap_content" android:background="@drawable/bg_image_border"
		android:src="@drawable/ic_place_holder" />
</LinearLayout>
